{
  "name": "Rapitron Store",
  "version": "1.0.0",
  "description": "Build an Extension!",
  "manifest_version": 2,
  "browser_action": {
    "default_icon": "assets/rapitron.ico"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "css": [],
      "js": [
        "devtools/content-script.js"
      ]
    }
  ],
  "permissions": [
    "<all_urls>",
    "activeTab",
    "tabs",
    "webRequest",
    "webRequestBlocking"
  ],
  "devtools_page": "devtools/devtools.html"
}